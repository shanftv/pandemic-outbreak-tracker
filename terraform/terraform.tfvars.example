# Example Terraform Variables File
# Copy this file to terraform.tfvars and customize for your deployment

# Project Configuration
project_name = "pandemic-tracker"
environment  = "dev"
location     = "Southeast Asia"  # Options: Southeast Asia, East Asia, Australia East, etc.

# Tags
tags = {
  Project     = "Pandemic Outbreak Tracker"
  ManagedBy   = "Terraform"
  Environment = "dev"
  Owner       = "your-team-name"
}

# Container Registry
acr_sku = "Basic"  # Options: Basic, Standard, Premium

# Storage Account
storage_replication_type = "LRS"  # Options: LRS, GRS, RAGRS, ZRS

# Logging
log_retention_days = 30

# API Container Configuration
api_image_name = "pandemic-tracker-api"
api_image_tag  = "latest"
api_cpu        = 0.5    # Options: 0.25, 0.5, 0.75, 1.0, 1.25, 1.5, 1.75, 2.0
api_memory     = "1Gi"  # Options: 0.5Gi, 1.0Gi, 1.5Gi, 2.0Gi, 3.0Gi, 3.5Gi, 4.0Gi

# Scaling
api_min_replicas = 1
api_max_replicas = 3

# CORS Configuration
# For development, use ["*"]
# For production, specify allowed domains
cors_origins = ["*"]
# cors_origins = ["https://yourdomain.com", "https://www.yourdomain.com"]
